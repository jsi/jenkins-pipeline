String concat(String a, String b) {
    a + b;
}

stage ('1') {
    parallel 'pull-app-features':{
        node('Node-1') {
            echo "Workspace: ${env.WORKSPACE}"
            echo "Build Tag: ${env.BUILD_TAG}"
            echo "Version: 0.1.${env.BUILD_NUMBER}"
            echo "Java home: ${env.JAVA_HOME}"
            git url: 'https://github.com/enonic/app-features'
            def v = version()
            if (v) {
                def message = concat("Building version ", v)
                echo message
            }
        }
    }, 'pull-purple-js':{
        node ('Node-2') {
            echo "Workspace: ${env.WORKSPACE}"
            echo "Build Tag: ${env.BUILD_TAG}"
            echo "Version: 0.1.${env.BUILD_NUMBER}"
            echo "Java home: ${env.JAVA_HOME}"
            git url: 'https://github.com/purplejs/purplejs'
            def v = version()
            if (v) {
                def message = concat("Building version ", v)
                echo message
            }
        }
    } 
}

stage ('2') {
    parallel 'install-maven3-n1':{
        node ('Node-1') {
            timestamps {
                def m3Home = tool 'M3'
                echo m3Home
            }
        }
    }, 'install-maven3-n2':{
        node ('Node-2') {
            timestamps {
                def m3Home = tool 'M3'
                echo m3Home
            }
        }
    }
}

stage ('3') {
    parallel 'build-app-features':{
        node ('Node-1') {
            sh "./gradlew --daemon build"
            def gradleHome = tool 'Gradle'
            echo gradleHome
        }
    }, 'build-purple-js':{
        node ('Node-2') {
            sh "./gradlew --daemon build"
            def gradleHome = tool 'Gradle'
            echo gradleHome
        }
    }
}

def version() {
    def matcher = readFile('gradle.properties') =~ 'version = (.+)'
    matcher ? matcher[0][1] : null
}