parallel 'good-words': {
    node('Node-1') {
        timestamps {
            echo 'Nice!'
            echo 'Beautiful!'
        }
        timestamps {
            echo 'Great!'
            echo 'Gracious!'
        }
    }
}, 'bad-words': {
    node('Node-2') {
        timestamps {
            echo "The build number is: ${env.BUILD_NUMBER}"
        }
        echo 'Shoot'
        echo 'Horrible'
        timestamps {
            echo 'Oh no!'
        }
    }
}
