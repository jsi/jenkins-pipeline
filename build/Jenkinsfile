parallel 'good-words': {
    node('Node-1') {
        timestamps {
            echo 'Nice!'
            echo 'Beautiful!'
        }
        timestamps {
            echo 'Great!'
            echo 'Gracious!'
        }
        echo "Workspace: ${env.WORKSPACE}"
        timestamps {
            echo "Build Tag: ${env.BUILD_TAG}"
        }
    }
}, 'bad-words': {
    node('Node-2') {
        timestamps {
            echo "Version: 0.1.${env.BUILD_NUMBER}"
        }
        echo 'Shoot'
        echo 'Horrible'
        timestamps {
            echo 'Oh no!'
        }
        echo "Java home: ${env.JAVA_HOME}"
    }
}
